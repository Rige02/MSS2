<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/colors"
    tools:context="omicron.mss.ChangePasswordActivity">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPasswordText"
        android:textColorHint="#FF7b797b"
        android:background="@drawable/text_box2"
        android:layout_marginTop="25dp"
        android:hint="Enter New Password"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:textSize="15sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmChangePasswordText"
        android:textColorHint="#FF7B797B"
        android:background="@drawable/text_box2"
        android:layout_marginTop="10dp"
        android:linksClickable="false"
        android:longClickable="false"
        android:hint="Confirm Password"
        android:layout_below="@+id/newPasswordText"
        android:layout_alignLeft="@+id/newPasswordText"
        android:layout_alignStart="@+id/newPasswordText"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save New Password"
        android:background="@drawable/button_grey"
        android:id="@+id/confirmButton"
        android:onClick="changePassword"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/confirmChangePasswordText"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button9"
        android:background="@drawable/button_grey"
        android:onClick="gotoEdit"
        android:layout_below="@+id/confirmButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />
</RelativeLayout>
